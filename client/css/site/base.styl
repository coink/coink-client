.strong
    font-weight bold

.button
    margin: 0px auto

body
	background BG
    font-family 'Raleway' sans-serif

table
    width 100%
    text-align center

th
    text-align center !important

footer
	text-align center

@media only screen and (min-width: 40.063em)
	#coink, #wrapper
		height 100%
		min-height 100%
		#content-wrapper
			min-height 100%
			position relative
			.floatfix
				position absolute
				top 0
				bottom 0
				left 1.5em
				right @left
				sticky-footer 4em
				.wrap
					padding 1px

	.row.full-height
		height 100%
		min-height 100%
		display table-row

		&>.column, &>.columns
			height 100%
			overflow auto
			display table-cell
