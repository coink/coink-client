body
	background BG url('/img/bg.png')

.row.left
	margin 0

@media only screen and (min-width: 40.063em)
	#coink, #wrapper
		height 100%
		min-height 100%
		#content-wrapper 
			min-height 100%
			position relative
			.floatfix
				position absolute
				top 0
				bottom 0
				left 1.5em
				right @left
				sticky-footer 2em
				.wrap
					padding 1px
				footer
					text-align center

	.row.full-height
		height 100%
		min-height 100%
		display table-row

		&>.column, &>.columns
			height 100%
			overflow auto
			display table-cell